{
    "description": "Global app shortcut",
    "manipulators": [
        {
            "from": { "key_code": "right_option" },
            "to": [
                {
                    "set_notification_message": {
                        "id": "org.pqrs.notificaion_message_global_shortcut",
                        "text": "d:Dictionary, f:Finder, n:notes, c:Chrome, S:safari, t:iTerm, i:intellij, C:code, k:kakaotalk, T:telegram, s:Slack"
                    }
                },
                {
                    "set_variable": {
                        "name": "modifier_down_flag",
                        "value": true
                    }
                }
            ],
            "to_after_key_up": [
                {
                    "set_notification_message": {
                        "id": "org.pqrs.notificaion_message_global_shortcut",
                        "text": ""
                    }
                },
                {
                    "set_variable": {
                        "name": "modifier_down_flag",
                        "value": false
                    }
                }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "d" },
            "to": [{ "shell_command": "open -a 'Dictionary.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "c" },
            "to": [{ "shell_command": "open -a 'Google Chrome.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "t" },
            "to": [{ "shell_command": "open -a 'iTerm.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "s" },
            "to": [{ "shell_command": "open -a 'Slack.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "n" },
            "to": [{ "shell_command": "open -a 'Notes.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "e" },
            "to": [{ "shell_command": "open -a 'Finder.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
                    "type": "variable_if",
                    "value": true
                }
            ],
            "from": { "key_code": "i" },
            "to": [{ "shell_command": "open -a 'intelliJ IDEA.app'" }],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "name": "modifier_down_flag",
